<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Your head content -->
    <style>
        /* CSS for tabs */
        .tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
            margin-top: 20px;
            border-radius: 10px;
        }

        .tab button {
            background-color: #55c57a;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 20px;
            transition: 0.3s;
            border-radius: 10px 10px 0 0;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            margin-right: 5px;
        }

        .tab button:hover {
            background-color: #4bc08a;
        }

        .tab button.active {
            background-color: #4bc08a;
        }

        /* Additional button color */
        .secondary-button {
            background-color: #f44336;
            color: #fff;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s;
            font-size: 16px;
        }

        .secondary-button:hover {
            background-color: #d32f2f;
        }

        /* CSS for tab content */
        .tabcontent {
            display: none;
            padding: 20px;
            border: 1px solid #ccc;
            border-top: none;
            border-radius: 0 0 10px 10px;
            background-color: #fff;
        }

        /* Additional styling */
        .content {
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .content:hover {
            transform: translateY(-5px);
        }
    </style>
</head>
<body>
    <div class="container fade-in">
        <h2 style="color: #55c57a;">Welcome <%= username %>!</h2>
        <!-- Tabs -->
        <div class="tab">
            <button class="tablinks" onclick="openTab(event, 'welcome')">Welcome</button>
            <button class="tablinks" onclick="openTab(event, 'attendance')">View Attendance</button>
            <button class="tablinks" onclick="openTab(event, 'profile')">Profile</button>
        </div>

        <!-- Tab Content -->
        <div id="welcome" class="tabcontent">
            <!-- Welcome content with button for taking attendance -->
            <div class="content">
                <h3 style="color: #55c57a;">Welcome</h3>
                <p>Welcome to your dashboard! Explore the tabs to manage your tasks, view attendance, and update your profile.</p>
                <button onclick="takeAttendance()" class="secondary-button">Take Attendance</button>
            </div>
        </div>

        <div id="attendance" class="tabcontent">
            <!-- Attendance content -->
            <div class="content">
                <h3>Attendance:</h3>
                <ul class="attendance-list">
                    <% attendanceData.forEach(data => { %>
                        <li><strong><%= data.studentName %></strong> - <%= data.logData %> - <%= data.time %></li>
                    <% }); %>
                </ul>
            </div>
        </div>

        <div id="profile" class="tabcontent">
            <!-- Profile content -->
            <div class="content">
                <h3>Profile</h3>
                <p>Teacher Information:</p>
                <!-- Display teacher information such as number, email, teacher name, subject, class, etc. -->
            </div>
        </div>
    </div>

    <!-- JavaScript for tab functionality -->
    <script>
        function openTab(evt, tabName) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(tabName).style.display = "block";
            evt.currentTarget.className += " active";
        }

        // Functionality for taking attendance button
        function takeAttendance() {
            // Redirect to the specified URL
            window.location.href = "https://keshav-lemon.vercel.app/";
        }

        // By default, open the welcome tab
        document.getElementById("welcome").style.display = "block";
    </script>
</body>
</html>
